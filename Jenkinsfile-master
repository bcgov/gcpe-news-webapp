node('master') {

    stage('Code Quality') {
        echo "Running SonarQube static code analysis on master branch."
        openshiftBuild bldCfg: 'news-webapp-sonar-master', showBuildLogs: 'true'
    }

	stage('Dependency Security Check') {
        echo "Running Snyk analysis of dependencies"
        openshiftBuild bldCfg: 'news-webapp-snyk-master', showBuildLogs: 'true'
    }
	
    stage('Build Image') {
        echo "Building..."
        openshiftBuild bldCfg: 'news-webapp-master', showBuildLogs: 'true'
        openshiftTag destStream: 'news-webapp', verbose: 'true', destTag: 'MASTER-$BUILD_ID', srcStream: 'news-webapp', srcTag: 'uat'
    }

	stage('Deploy to UAT') {
        echo "Deploying to uat..."
		openshiftTag destStream: 'news-webapp', verbose: 'true', destTag: 'uat', srcStream: 'news-webapp', srcTag: 'MASTER-$BUILD_ID'
    }	
}

stage('Deploy on Prod') {
    input "Deploy to Prod?"
    node('master') {
        openshiftTag destStream: 'news-webapp', verbose: 'true', destTag: 'prod', srcStream: 'news-webapp', srcTag: 'MASTER-$BUILD_ID'
    }
}
