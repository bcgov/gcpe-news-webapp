@using Gov.News.Website.Models
@model NewsletterViewModel
<div class="newsletters">
    <div class="access">
        <ul>
            <li aria-label="Skip to main content">
                <a href="#main-content-editions">Skip to main content</a>
            </li>
            <li aria-label="Skip to footer">
                <a href="#footer" onclick="window.scrollTo(0,0);">Skip to footer</a>
            </li>
        </ul>
    </div>
    <div class="home-features" role="complementary" id="sidebar">
        <partial name="ConnectSocialMedia" />
        <partial name="ResourceLinks" />
        <vc:top-sectors />
    </div>
    <div class="home-body" id="main-content-editions" role="main">
        <div class="Editions">
            <h2><a href=@string.Format("../{0}","newsletters")>Newsletters</a></h2>
            <h3>@Model.Newsletter.Name</h3>
            <p>@Model.Newsletter.Description</p>
            <h5>Editions</h5>
            <div class="Editions-listing">
                <ul>
                    @foreach (var item in Model.Newsletter.Editions)
                    {
                        <div><h6>
                        <li><a href=@string.Format("/{0}/{1}/{2}","newsletters", Model.Newsletter.Key, item.Key)> @item.Value</a></li></h6>
                </div>
            }
                    </ul>

                </div>
            </div>
        </div>
    <div class="clear"></div>
    <br>
</div>

