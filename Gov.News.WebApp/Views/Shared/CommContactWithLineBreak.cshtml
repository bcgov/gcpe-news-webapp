@using Gov.News.Api.Models;

@model Contact

<span class="contact-name">@Model.FullName</span>
<div>
    @if (!string.IsNullOrEmpty(@Model.PhoneNumber))
    {
        <span>Direct: @Model.PhoneNumber</span>
    }
    @if (!string.IsNullOrEmpty(@Model.MobileNumber))
    {
        <environment include="Production">
            <br /><span>Cell: @Model.MobileNumber</span>
        </environment>
        <environment include="Development,Testing,Staging">
           <span>Cell: @Model.MobileNumber</span>
        </environment>
    }
</div>
@if (!string.IsNullOrEmpty(@Model.EmailAddress))
{
    <a href="mailto:@Model.EmailAddress">@Model.EmailAddress</a><br />
}