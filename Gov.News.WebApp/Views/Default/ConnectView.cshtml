        @{bool expandableFacebook = Model.FacebookLinks.Count() >= 5;}
        <div class="expandable-section facebook @(expandableFacebook ? "collapsed" : "expanded" )">
            <a name="facebook"></a>
            <h4>Find us on Facebook</h4>
            <div class="expandable-section-content">
                <div class="expander-body">
                    @if (Model.FacebookLinks != null && Model.FacebookLinks.Any())
                    {
                        <ul class="external-links">
                            @foreach (var link in Model.FacebookLinks)
                            {
                                <li><a href="@link.Url">@link.Title</a> <span>@link.Summary</span></li>
                            }
                        </ul>
                    }
                    @if (@expandableFacebook)
                    {
                        <div class="article-fade"> </div>
                    }
                </div>
                @if (@expandableFacebook)
                {
                    <a href="#" class="link-button expand">Expand Facebook List</a>
                    <a href="#" class="link-button collapse">Contract Facebook List</a>
                }
            </div>
